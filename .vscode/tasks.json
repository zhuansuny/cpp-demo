{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ 生成活动文件",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-std=c++11",
                "-I",
                "${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/bin/main",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/add/*.cpp",
                // "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}